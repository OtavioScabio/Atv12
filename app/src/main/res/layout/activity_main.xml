<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtNomeTime"
        android:layout_width="258dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:hint="Nome do Time"
        app:layout_constraintBottom_toTopOf="@+id/edtCidadeTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnViewTimes" />

    <EditText
        android:id="@+id/edtCidadeTime"
        android:layout_width="257dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        android:hint="Cidade do Time"
        app:layout_constraintBottom_toTopOf="@+id/btnAddTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNomeTime" />

    <Button
        android:id="@+id/btnAddTime"
        android:layout_width="331dp"
        android:layout_height="0dp"
        android:layout_marginBottom="49dp"
        android:text="Adicionar Time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCidadeTime" />

    <Button
        android:id="@+id/btnViewTimes"
        android:layout_width="338dp"
        android:layout_height="0dp"
        android:layout_marginBottom="33dp"
        android:text="Ver Times"
        app:layout_constraintBottom_toTopOf="@+id/edtNomeTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="366dp"
        android:layout_height="0dp"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/btnViewTimes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>